        crossorigin="anonymous"></script>
</head>

<body>
    <div class="container-fuil" style="margin: 0px 12px;">
        <div class="row" style="height: 55px;">
            <%- include('../partial/nav_bar') %>
        </div>
        <div class="row" id="content">
            <div id="side-bar" class="col-2 ps-4 pt-4" style="background-color: #f7f7f7;">
                <%- include('../partial/side_bar') %>
            </div>
            <div id="main-content" class="col-10 px-5 py-4">

                <div style="display: flex;" class="mb-3 justify-content-between">
                    <p class="fs-4 fw-bolder m-0">Danh sách các khuyến mãi</p>
                    <div class="m-0">
                        <select id="offer_state" class="me-4" style="border: none; outline: none;">
                            <option selected value="0">Trạng thái: Hoạt động</option>
                            <option value="1">Trạng thái: Tất cả</option>
                            <option value="2">Trạng thái: Hết hiệu lực</option>
                            <option value="3">Trạng thái: Không hoạt động</option>
                        </select>
                        <a href="/offer-create" class="btn btn-outline-success m-0">Tạo một khuyến mãi mới</a>
                    </div>
                </div>
                <div id="offer-list">
                    
                </div>

            </div>
        </div>
    </div>

    <script src="/javascripts/offer/offer_list.js"></script>
